<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="DemoQA Test Suite" verbose="1">
    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>

    <test name="Elements Tests">
        <classes>
            <class name="com.demoqa.tests.TextBoxTest"/>
            <class name="com.demoqa.tests.ButtonsTest"/>
            <class name="com.demoqa.tests.UploadAndDownloadTest"/>
        </classes>
    </test>

    <test name="Alerts and Windows Tests">
        <classes>
            <class name="com.demoqa.tests.AlertsTest"/>
            <class name="com.demoqa.tests.BrowserWindowsTest"/>
        </classes>
    </test>

    <test name="Widgets Tests">
        <classes>
            <class name="com.demoqa.tests.DatePickerTest"/>
        </classes>
    </test>
</suite>

